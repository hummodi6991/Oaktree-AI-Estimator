{
  "version": 8,
  "name": "Esri World Imagery",
  "glyphs": "/glyphs/{fontstack}/{range}.pbf",
  "sources": {
    "esri_world_imagery": {
      "type": "raster",
      "tiles": [
        "https://services.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
      ],
      "tileSize": 256,
      "attribution": "Tiles \u00a9 Esri \u2014 Source: Esri, Maxar, Earthstar Geographics, and the GIS User Community"
    },
    "oaktree_parcels": {
      "type": "vector",
      "tiles": [
        "/v1/tiles/parcels/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 19
    },
    "oaktree_district_labels": {
      "type": "vector",
      "tiles": [
        "/v1/tiles/district-labels/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 19
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#000000"
      }
    },
    {
      "id": "esri",
      "type": "raster",
      "source": "esri_world_imagery",
      "minzoom": 0,
      "maxzoom": 19
    },
    {
      "id": "oaktree-parcels-class-fill",
      "type": "fill",
      "source": "oaktree_parcels",
      "source-layer": "parcels",
      "minzoom": 12,
      "paint": {
        "fill-color": [
          "match",
          [
            "to-string",
            [
              "get",
              "classification"
            ]
          ],
          "1000",
          "#FFD54F",
          "2000",
          "#3B82F6",
          "3000",
          "#22C55E",
          "4000",
          "#A855F7",
          "#94A3B8"
        ],
        "fill-opacity": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          12,
          0.08,
          13,
          0.14,
          14,
          0.2,
          15,
          0.28
        ],
        "fill-outline-color": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          12,
          "rgba(255,255,255,0.10)",
          14,
          "rgba(255,255,255,0.20)",
          15,
          "rgba(255,255,255,0.35)"
        ]
      },
      "filter": [
        "!=",
        [
          "to-string",
          [
            "get",
            "classification"
          ]
        ],
        "7500"
      ]
    },
    {
      "id": "oaktree-district-labels",
      "type": "symbol",
      "source": "oaktree_district_labels",
      "source-layer": "district_labels",
      "minzoom": 10,
      "layout": {
        "text-field": [
          "get",
          "label"
        ],
        "text-font": [
          "NotoNaskhArabic-Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          10,
          11,
          11,
          12,
          14,
          14,
          16,
          16
        ],
        "text-anchor": "center",
        "text-allow-overlap": false,
        "text-ignore-placement": false
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1.2,
        "text-halo-blur": 0.2
      }
    }
  ]
}
